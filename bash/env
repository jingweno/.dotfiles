export JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Home"
export JAVA_OPTS="-Xmx1024m -XX:MaxPermSize=512m"

export ANT_HOME="/opt/local/share/java/apache-ant"
export ANT_OPTS="-Xmx1024m -XX:MaxPermSize=512m"

export M2_HOME="/opt/local/share/java/maven2"
export M3_HOME="/opt/local/share/java/maven3"
export MAVEN_OPTS="-Xmx1024m -XX:MaxPermSize=512m"

export CATALINA_HOME="/opt/local/share/java/apache-tomcat"
export CATALINA_OPTS="-Xmx1024m -XX:MaxPermSize=512m"

export GROOVY_HOME="/opt/local/share/java/groovy"

#export MYSQL_HOME="/usr/local/mysql"
export POSTGRESQL_HOME="/opt/local/lib/postgresql90"

export NODE_PATH="/usr/local/lib/node_modules"

export PATH=$POSTGRESQL_HOME/bin:$GROOVY_HOME/bin:$CATALINA_HOME/bin:$M2_HOME/bin:$M3_HOME/bin:$ANT_HOME/bin:$JAVA_HOME/bin:$PATH

# Loading RVM
[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm

# MacPorts Installer addition on 2009-09-05_at_22:58:41: adding an appropriate PATH variable for use with MacPorts.
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
# Finished adapting your PATH environment variable for use with MacPorts.

# MacPorts Installer addition on 2008-12-13_at_21:31:52: adding an appropriate MANPATH variable for use with MacPorts.
export MANPATH=/opt/local/share/man:$MANPATH
# Finished adapting your MANPATH environment variable for use with MacPorts.

# MacPorts Bash shell command completion
if [ -f /opt/local/etc/bash_completion ]; then
  . /opt/local/etc/bash_completion
fi
