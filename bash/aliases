alias ls='ls -G' #for color
alias ll='ls -alh'
alias grep='grep --color'
alias rm='rm -i'
alias mkdir='mkdir -p'
alias cp='cp -R'
alias myip='echo $MY_IP'

alias mvim='rvm system do /usr/local/bin/mvim $@'

alias brake='bundle exec rake'
alias bexec='bundle exec'

